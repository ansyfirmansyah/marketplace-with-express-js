<%-include('../includes/head.ejs') %>
        <link rel="stylesheet" href="/css/forms.css">
        <link rel="stylesheet" href="/css/auth.css">
        </head>

        <body>
                <%-include('../includes/navigation.ejs') %>

                        <main>
                                <form class="signup-form" action="/signup" method="POST" novalidate>
                                        <% if (errorMessage.length > 0) { %> 
                                                <div class="user-message user-message--error"><%= errorMessage[0].msg ? errorMessage[0].msg : errorMessage %></div>
                                        <% } %>
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <div class="form-control">
                                                <label for="email">E-Mail</label>
                                                <input 
                                                        class="<%= validationErrors.find(val => val.param === 'email') ? 'invalid' : '' %>"
                                                        type="email" name="email" id="email" value="<%= (oldInput ? oldInput.email : '') %>">
                                        </div>
                                        <div class="form-control">
                                                <label for="password">Password</label>
                                                <input 
                                                        class="<%= validationErrors.find(val => val.param === 'password') ? 'invalid' : '' %>"
                                                        type="password" name="password" id="password" value="<%= (oldInput ? oldInput.password : '') %>">
                                        </div>
                                        <div class="form-control">
                                                <label for="confirmPassword">Confirm Password</label>
                                                <input 
                                                        class="<%= validationErrors.find(val => val.param === 'confirmPassword') ? 'invalid' : '' %>"
                                                        type="password" name="confirmPassword" id="confirmPassword" value="<%= (oldInput ? oldInput.confirmPassword : '') %>">
                                        </div>
                                        <button class="btn" type="submit">Signup</button>
                                </form>
                        </main>
                        <%-include('../includes/end.ejs') %>