<%-include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
    </head>

    <body>
        <%-include('../includes/navigation.ejs')%>
            <main>
                <% if (errorMessage.length > 0) { %> 
                    <div class="user-message user-message--error"><%= errorMessage[0].msg ? errorMessage[0].msg : errorMessage %></div>
                <% } %> 
                <form class="login-form" action="/login" method="POST" novalidate>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="form-control">
                        <label for="email">E-Mail</label>
                        <input type="email" name="email" id="email" value="<%= (oldInput ? oldInput.email : '') %>">
                    </div>
                    <div class="form-control">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" value="<%= (oldInput ? oldInput.password : '') %>">
                    </div>
                    <button class="btn" type="submit">Login</button>
                </form>
                <div class="centered">
                    <a href="/reset">Reset Password</a>
                </div>
            </main>
            <%-include('../includes/end.ejs')%>